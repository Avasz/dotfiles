# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango
color=#c6c6c6

[mediaplayer]
command=$SCRIPT_DIR/mediaplayer/mediaplayer
instance=spotify
label=<span size="small" color="grey"> </span>
interval=5
signal=10

[ytdl]
command=$HOME/Projects/i3blocks-ytdl/ytdl
full_text=<span size="small" color="grey"></span>


[weather]
command=curl -Ss 'https://wttr.in/lalitpura?format=3' | cut -f"2" -d":" | sed "s/  / /" | sed "s/^ //g"
interval=300

[temperature]
command=$SCRIPT_DIR/temperature/temperature
interval=60
label=<span size="large" color="grey">﨎 </span>
separator=false

[cpu]
command=$SCRIPT_DIR/cpu_usage/cpu_usage
interval=10
label=<span size="large" color="grey">﬙ </span>
separator=false

[memory]
command=free -mh | sed -n '2p' | awk '{print $3}'
label=<span size="large" color="grey"> </span>
separator=true
interval=30

# Battery indicator
[battery]
command=$SCRIPT_DIR/battery/battery
interval=30


[wifi]
command=$SCRIPT_DIR/wifi/wifi
label=<span size="large" color="grey"> </span>
INTERFACE=wlp0s20f3
separator=false
interval=60

[IP]
command=$SCRIPT_DIR/IP/ip
interval=60
align=center

[bandwidth]
command=$SCRIPT_DIR/bandwidth/bandwidth
interval=5

[volume]
command=$SCRIPT_DIR/volume/volume
interval=once
signal=10
min_width=62
align=center

[rofi-calendar]
command=$SCRIPT_DIR/rofi-calendar/rofi-calendar
interval=60

[dunst]
command=$SCRIPT_DIR/dunst/dunst
markup=pango
interval=once
format=json
#min_width=50
#align=center
#DUNST_MUTE=off
