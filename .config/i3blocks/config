# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango

[ytdl]
command=$HOME/Projects/i3blocks-ytdl/ytdl
full_text=<span color="#ef534e"></span>
[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=300
color=#A4C2F4

[temperature]
command=$SCRIPT_DIR/temperature/temperature
interval=60
label=<span color="#f9a825" font="Font Awesome 5 Free">  </span>
separator=false

[cpu]
command=$SCRIPT_DIR/cpu_usage/cpu_usage
interval=10
label=<span color="#0277bd" font="Font Awesome 5 Free"> </span>
separator=false

[memory]
command=free -mh | sed -n '2p' | awk '{print $3}'
label=<span color="#00E676" font="Font Awesome 5 Free">  </span>
separator=true
interval=30

# Battery indicator
[battery]
command=$SCRIPT_DIR/battery/battery
interval=30


[wifi]
command=$SCRIPT_DIR/wifi/wifi
label= 
INTERFACE=wlp0s20f3
separator=false
interval=60

[IP]
command=$SCRIPT_DIR/IP/ip
interval=60

[bandwidth]
command=$SCRIPT_DIR/bandwidth/bandwidth
interval=5

[volume]
command=$SCRIPT_DIR/volume/volume
interval=30

[rofi-calendar]
command=$SCRIPT_DIR/rofi-calendar/rofi-calendar
interval=60
label= 

